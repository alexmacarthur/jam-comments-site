<nav class="flex justify-between p-5 items-center space-y-0 lg:space-y-4 md:flex-row">
  <a
    href="/"
    class="
      logo
      text-base
      lg:text-2xl
      py-3
      flex
      items-center
      "
    >
    <span class="w-48">
      {% include 'svg/logo-full.svg' %}
    </span>
  </a>

  <button class="md:hidden" id="navOpen">
    Menu
  </button>

  <div
    class="
      hidden
      md:flex
      items-center
      justify-center
      fixed
      z-50
      w-full
      md:w-auto
      h-full
      md:h-auto
      top-0
      md:t-auto
      left-0
      md:left-auto
      md:relative
      bg-white
      md:bg-none
    "
    id="nav"
  >

    <span
      id="navClose"
      class="block md:hidden w-20 h-20 cursor-pointer absolute"
      style="top: 1rem; right: 1rem;"
    >
      {% include 'svg/times.svg' %}
    </span>

    <ul class="flex flex-col md:flex-row gap-4 lg:gap-6">
      {% for item in nav_items %}
        <li>
          <a
            {% if item.url === "SIGNUP" %}
              href="{{ site.signUpUrl }}" target="_blank" data-sign-up-link="nav"
            {% else %}
              href="{{ item.url }}"
            {% endif %}

            class="font-thin hoverable-link text-2xl md:text-lg pb-3 md:pb-3 text-gray-600 hover:text-gray-900"
          >
            {{ item.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</nav>
