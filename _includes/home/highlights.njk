<div class="max-w-5xl mx-auto">
<div class="grid gap-6 grid-cols-1 md:grid-cols-uneven">
  <img
    class="border-1 mb-12 md:mb-0"
    alt="example comment form"
    data-src="/assets/img/jam-comments-form-cropped.gif"
  />
  <ul class="space-y-12">
    {% for highlight in homeHighlights %}
      <li>
        <h3 class="text-2xl font-semibold leading-tight mb-2">
            {{ highlight.heading | safe }}
        </h3>
        <p>
            {{ highlight.description | safe }}
        </p>
      </li>
    {% endfor %}
  <ul>
  </div>
</div>
