{% extends "_includes/layout-home.njk" %}

{% block title %}JamComments: Stupid, Simple, Static Comments{% endblock %}

{% block content %}
<div class="max-w-5xl mx-auto px-3">
    <div class="text-center pt-10 mb-12 mx-auto max-w-3xl">
        <h1 class="font-bold text-3xl md:text-6xl leading-tight mb-4">Stupid, Simple Comments for the Jamstack</h1>
        <h2 class="text-xl md:text-2xl">
            statically rendered, ad-free, nothing fancy.
        </h2>
    </div>

    <div class="text-center mb-12">
        <a 
            class="bg-gray-200 rounded-md py-2 px-4 text-gray-800 shadow-sm"
            href="https://app.jamcomments.com/login">Log In or Sign Up</a>
    </div>

    <div class="my-20">
        <hr class="max-w-3xl mx-auto block h-1 rounded-sm bg-gray-200 my-5 shadow-none border-0" />

        <ul class="grid grid-cols-3 gap-6">
            {% for perk in steps %}
                <li class="text-center">
                    <h3 class="text-2xl mb-3">{{ perk.heading }}</h3>
                    <p>{{ perk.description }}</p>
                </li>
            {% endfor %}
        </ul>

        <hr class="max-w-3xl mx-auto block h-1 rounded-sm bg-gray-200 my-5 shadow-none border-0" />
    </div>
</div>
{% endblock %}
