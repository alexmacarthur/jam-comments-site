{
  "name": "jam-comments-site",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "serve-eleventy": "NODE_ENV=development eleventy --serve",
    "css:watch": "NODE_ENV=development postcss assets/styles/tailwind.css --o assets/dist/styles.css --watch",
    "css:build": "NODE_ENV=production postcss assets/styles/tailwind.css --o assets/dist/styles.css",
    "js:watch": "parcel watch assets/scripts/index.js -d assets/dist",
    "js:build": "parcel build assets/scripts/index.js -d assets/dist",
    "start": "concurrently \"npm run serve-eleventy\" \"npm run css:watch\" \"npm run js:watch\"",
    "build": "rm -rf _site && npm run css:build && npm run js:build && ELEVENTY_PRODUCTION=true eleventy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@tailwindcss/jit": "^0.1.15",
    "@tailwindcss/typography": "^0.4.0",
    "@vercel/node": "^1.8.2",
    "airtable": "^0.10.0",
    "clean-css": "^4.2.3",
    "dotenv": "^8.2.0",
    "html-minifier": "^4.0.0",
    "markdown-it-anchor": "^6.0.0",
    "markdown-it-for-inline": "^0.1.1",
    "node-fetch": "^2.6.1",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.0.0",
    "quicklink": "^2.0.0",
    "tailwindcss": "^2.0.4",
    "terser": "^5.3.2"
  },
  "devDependencies": {
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.2",
    "concurrently": "^5.3.0",
    "parcel": "^1.12.4",
    "postcss-nested": "^5.0.1"
  }
}
